{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"lib": ["es2019", "es2020", "es2022.error"],
		"removeComments": true,
		"useUnknownInCatchVariables": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"declaration": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"outDir": "./dist/",
	},
	"include": [
		"credentials/**/*",
		"credentials/Neo4jApi.credentials.ts", // Explicitly include the renamed file
		"nodes/**/*",
		"nodes/**/*.json",
		"package.json",
		"update_mcp_descriptions.ts" // Include the new script
	],
	"exclude": [
		"node_modules",
		"dist",
		"Postgres/**/*"
	]
}
